<% layout('layouts/boilerplate') %> 

<div class="row">
    <h1 class="text-center">New Campground</h1>
    <div class="col-6 offset-3">

        <form action="/campgrounds" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title" >Title: </label>
                <input class="form-control" type="text" id="title" placeholder="CampgroundÂ´s title name" name="campground[title]" required>
                <div class="valid-feedback">
                    Looks fine!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="location" >Location: </label>
                <input class="form-control" type="text" id="location" placeholder="location here" name="campground[location]" required>
                <div class="valid-feedback">
                    Looks fine!
                </div>
            </div>


            <!-- <input type="file" name="image" id="" multiple> -->


            <!-- <div class="mb-3">
                <label class="form-label" for="image" >Image Url: </label>
                <input class="form-control" type="text" id="image" placeholder="image Url" name="campground[image]" required>
                <div class="valid-feedback">
                    Looks fine!
                </div>
            </div> -->

            <div class="mb-3">
                <label class="form-label" for="price" >Price: </label>
                <div class="input-group mb-3">
                    <span class="input-group-text" id="price-label">$</span>
                    <input id="price" type="text" class="form-control" placeholder="0.00" 
                        name="campground[price]" aria-label="price" 
                        aria-describedby="price-label" required>
                    <div class="valid-feedback">
                        Looks fine!
                    </div>
                </div>

            </div>

            <div class="mb-3">
                <label class="form-label" for="description" >Description: </label>
                <textarea class="form-control" type="text" id="description" placeholder="description here" name="campground[description]" required></textarea>
                <div class="valid-feedback">
                    Looks fine!
                </div>
            </div>

            
            <div class="mb-3">
                <label for="image" class="form-label">Add images:</label>
                <input class="form-control" type="file" id="image" name="image" multiple> 
            </div>

            
            <div class="mb-3">
                <button class="btn btn-success">Add Campground</button>
            </div>
            
        </form>

    </div>
</div>




    <footer>
        <a href="/campgrounds">All Campgrounds</a>
    </footer>


